<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YouTubeApiProject</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom CSS for additional styling -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YouTubeApiProject.styles.css" asp-append-version="true" />

    <!-- Google Fonts for modern typography -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #181818;
            color: #ffffff;
        }

        header {
            background-color: #ff0000; /* YouTube Red */
            color: #fff;
            position: sticky;
            top: 0;
            z-index: 999;
        }

        /* Navbar Styling */
        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: #fff !important;
        }

        .navbar-nav .nav-link {
            color: #fff !important;
            font-size: 1.1rem;
            padding: 0.75rem 1.5rem;
            transition: color 0.3s ease, transform 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #ffcc00 !important; /* Glowing yellow on hover */
                transform: scale(1.1);
            }

        .navbar-toggler-icon {
            background-image: url('data:image/svg+xml;charset=utf8,%3Csvg viewBox="0 0 30 30" xmlns="http://www.w3.org/2000/svg"%3E%3Cpath stroke="rgba%28255, 255, 255, 0.5%29" stroke-width="2" stroke-linecap="round" stroke-miterlimit="10" d="M4 7h22M4 15h22M4 23h22"/%3E%3C/svg%3E');
        }

        /* Buttons and Links */
        .btn-primary {
            background-color: #ff0000;
            border-color: #ff0000;
        }

            .btn-primary:hover {
                background-color: #cc0000;
                border-color: #cc0000;
            }

        /* Main Content Styling */
        main {
            margin-top: 2rem;
            background-color: #202020;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        /* Footer Styling */
        footer {
            background-color: #282828;
            color: #fff;
            padding: 20px 0;
            width: 100%;
            text-align: center;
        }

            footer a {
                color: #ffcc00;
                text-decoration: none;
            }

                footer a:hover {
                    color: #ff9900;
                }

        /* Button Animations */
        .btn-fancy {
            background-color: #ff0000;
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-transform: uppercase;
            font-weight: bold;
            letter-spacing: 1px;
            border-radius: 50px;
            transition: 0.3s;
        }

            .btn-fancy:hover {
                background-color: #cc0000;
                box-shadow: 0px 8px 15px rgba(255, 0, 0, 0.4);
            }

        /* Additional Creative Touches */
        .youtube-icon {
            font-size: 1.5rem;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <!-- Flexbox container -->
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fab fa-youtube youtube-icon"></i> YouTubeApiProject
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="YouTube" asp-action="Index">Search Music</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody() <!-- This is crucial for rendering child views -->
            </main>
        </div>

        <footer class="mt-auto text-muted">
            <!-- Flexbox ensures footer stays at the bottom -->
            <div class="container">
                &copy; 2024 - YouTubeApiProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <!-- jQuery and Bootstrap Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
