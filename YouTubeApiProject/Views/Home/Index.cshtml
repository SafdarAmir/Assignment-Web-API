@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to YouTube</h1>
    <p>Explore videos, search for content, and retrieve data directly from the YouTube platform through our seamless integration with the YouTube API.</p>
</div>

<!-- Spinning YouTube logo and text section -->
<div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
    <img src="https://upload.wikimedia.org/wikipedia/commons/b/b8/YouTube_Logo_2017.svg" alt="YouTube Logo" class="img-fluid" style="animation: spin 4s linear infinite; width: 200px; filter: invert(1);" />
</div>

<style>
    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    /* Styling to center only the logo */
    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .align-items-center {
        align-items: center;
    }
</style>
